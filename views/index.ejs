<!DOCTYPE html>
<html>

<head>
    <title>Unit 2 Assessment</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        form {
            display: inline;
        }
    </style>
</head>

<body>
    <h1>To Do List</h1>
    <% if(todos.length > 0) { %>

        <ul>
            <% todos.forEach(function(x) {  %>
                <li>
                    <%= x.todo %> -
                        <%= x.done ? "done" : "not done" %>
                            <form action="/<%= x.id %>?_method=DELETE" id="delete-form" method="POST"><button type="submit ">DELETE</button>
                            </form>

                </li>
                <% }); %>
        </ul>


        <% } else { %>
            <h3>There are no To Dos yet</h3>

            <% } %>
                <hr>
                <form action="/" method="POST" autocomplete="off">
                    <input type="text" name="todo">
                    <button type="submit">ADD TODO</button>
                </form>
</body>

</html>